[Unit]
Description=oVirt Node CIM configuration service
After=ovirt-post.service ovirt-firstboot.service
Wants=ovirt-post.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/libexec/ovirt-init-functions.sh start_ovirt_cim
ExecStop=/usr/libexec/ovirt-init-functions.sh stop_ovirt_cim

[Install]
WantedBy=multi-user.target
